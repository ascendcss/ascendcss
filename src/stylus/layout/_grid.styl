@import "../utilities/functions/_rpt";
@import "../utilities/functions/_check-and-split";

// Generar valores de filas o columnas
// / @param {string} values -  datos par crear el numero de columnas o filas
// / @return {string} - CSS Value;
create-grid-values(values) {
    values = check-and-split('' + values);
    result = '';

    for value in values {
        value = value + 'fr';
        result += ' ' + value;
    }

    return unquote(result);
}

// / Generar grid
// / @param {number} col - Columnas
// / @param {number} row - Filas
grid(col = false, row = false) {
    // Revisar si se definio una variable
    if (!col && !row) {
        error('No se han definido las variables -> grid(col, row)');
    }
    // Si existe la variable de col regresar declaracion
    if (col) {
        grid-template-columns: create-grid-values(col);
    }

    // Si existe la variable de row regresar declaracion
    if (row) {
        grid-template-rows: create-grid-values(row);
    }
}

col($col = false) {
    if (!$col) {
        error('No se han definido las variables -> col($col)');
    } else {
        grid-template-columns: create-grid-values($col);
    }
}

row($row = false) {
    if (!$row) {
        error('No se han definido las variables -> row($row)');
    } else {
        grid-template-rows: create-grid-values($row);
    }
}

cols($cols = false) {
    if (!$cols) {
        error('No se han definido las variables -> cols($cols)');
    } else {
        grid-column-end: span $cols;
    }
}

rows($rows = false) {
    if (!$rows) {
        error('No se han definido las variables -> rows($rows)');
    } else {
        grid-row-end: span $rows;
    }
}